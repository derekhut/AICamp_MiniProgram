/* pages/tool-detail/sentence/index.wxss */
.container {
  padding: 30rpx;
}

/* 工具头部样式 */
.tool-header {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eee;
}

.tool-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.tool-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.tool-category {
  display: inline-block;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  margin-top: 10rpx;
}

/* 错误信息样式 */
.error-message {
  background-color: #fff2f2;
  color: #e64340;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

/* 表单样式 */
.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  font-weight: 500;
  color: #333;
}

.required {
  color: #e64340;
  margin-left: 5rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 数字输入框样式 */
.number-input-container {
  display: flex;
  align-items: center;
}

.number-input {
  width: 200rpx;
  margin-right: 20rpx;
}

.number-range {
  font-size: 24rpx;
  color: #999;
}

/* 单选框样式 */
.radio-group {
  display: flex;
  flex-direction: column;
}

.radio-label {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.radio-label radio {
  margin-right: 10rpx;
}

/* 按钮样式 */
.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn-back {
  width: 30%;
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
}

.btn-generate {
  width: 60%;
  background-color: #4e6ef2;
  color: #fff;
  font-size: 28rpx;
}
