/* pages/result/result.wxss */
.container {
  padding: 30rpx;
}

/* 结果头部样式 */
.result-header {
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.tool-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.timestamp {
  font-size: 24rpx;
  color: #999;
}

/* 结果内容样式 */
.result-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  min-height: 300rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.action-btn {
  width: 48%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.copy-btn {
  background-color: #f5f5f5;
  color: #333;
}

.share-btn {
  background-color: #4e6ef2;
  color: #fff;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 底部导航按钮 */
.nav-buttons {
  display: flex;
  justify-content: space-between;
}

.nav-btn {
  width: 48%;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn {
  background-color: #f5f5f5;
  color: #666;
}

.home-btn {
  background-color: #333;
  color: #fff;
}
