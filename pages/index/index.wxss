/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  text-align: center;
}

.intro {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 80rpx;
  line-height: 1.6;
  max-width: 80%;
}

.footer {
  margin-top: 60rpx;
}

.footnote {
  font-size: 24rpx;
  color: #999;
}
